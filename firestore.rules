rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Usuarios: Lectura para autenticados, escritura para el propio usuario o admin
    match /users/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && (request.auth.uid == userId || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.rol == 'Leader');
    }
    
    // Eventos: Lectura para todos autenticados, escritura solo para líderes
    match /events/{eventId} {
      allow read: if request.auth != null;
      allow create, update, delete: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.rol == 'Leader';
    }
    
    // Canciones: Lectura para todos autenticados, escritura solo para líderes
    match /songs/{songId} {
      allow read: if request.auth != null;
      allow create, update, delete: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.rol == 'Leader';
    }
    
    // Confirmaciones: Lectura para todos, escritura para el propio usuario
    match /confirmations/{confirmationId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }
    
    // Notificaciones: Lectura para todos autenticados, creación por usuarios autenticados,
    // eliminación solo para líderes. Actualizaciones permitidas para autenticados (ej. marcar leido).
    match /notifications/{notificationId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null;
      allow delete: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.rol == 'Leader';
      allow update: if request.auth != null;
    }
  }
}
